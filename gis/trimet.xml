  <Style name="RailLines">
    <!-- MAX Red Line -->
    <Rule>
      <Filter>[type] = 'MAX' and [line] = 'R'</Filter>
      <LineSymbolizer>
	<CssParameter name="stroke">rgba(255,0,0,255)</CssParameter>
	<CssParameter name="stroke-width">7</CssParameter>
	<CssParameter name="stroke-linejoin">round</CssParameter>
      </LineSymbolizer>
    </Rule>

    <!-- MAX Green Line -->
    <Rule>
      <Filter>[type] = 'MAX' and [line] = 'G'</Filter>
      <LineSymbolizer>
	<CssParameter name="stroke">rgba(0,255,0,255)</CssParameter>
	<CssParameter name="stroke-width">7</CssParameter>
	<CssParameter name="stroke-linejoin">round</CssParameter>
      </LineSymbolizer>
    </Rule>

    <!-- MAX Blue Line -->
    <Rule>
      <Filter>[type] = 'MAX' and [line] = 'B'</Filter>
      <LineSymbolizer>
	<CssParameter name="stroke">rgba(0,0,255,255)</CssParameter>
	<CssParameter name="stroke-width">7</CssParameter>
	<CssParameter name="stroke-linejoin">round</CssParameter>
      </LineSymbolizer>
    </Rule>

    <!-- MAX Yellow Line -->
    <Rule>
      <Filter>[type] = 'MAX' and [line] = 'Y'</Filter>
      <LineSymbolizer>
	<!-- TODO: too light? -->
	<CssParameter name="stroke">#e5e200</CssParameter>
	<CssParameter name="stroke-width">7</CssParameter>
	<CssParameter name="stroke-linejoin">round</CssParameter>
      </LineSymbolizer>
    </Rule>

    <!-- MAX Blue/Red Line -->
    <Rule>
      <Filter>[type] = 'MAX' and [line] = 'BR'</Filter>
      <!-- Blue -->
      <LineSymbolizer>
	<CssParameter name="stroke">#0000ff</CssParameter>
	<CssParameter name="stroke-width">7</CssParameter>
	<CssParameter name="stroke-linejoin">round</CssParameter>
      </LineSymbolizer>
      <!-- Red -->
      <LineSymbolizer>
	<CssParameter name="stroke">#ff0000</CssParameter>
	<CssParameter name="stroke-width">7</CssParameter>
	<CssParameter name="stroke-linejoin">round</CssParameter>
	<CssParameter name="stroke-dasharray">15,15</CssParameter>
      </LineSymbolizer>
    </Rule>
    
    <!-- MAX Blue/Green Line 
    	present on the approach to Gateway TC from the east, easy to overlook. Issues 1 and 9 -->
    <Rule>
      <Filter>[type] = 'MAX' and [line] = 'BG'</Filter>
      <!-- Blue -->
      <LineSymbolizer>
	<CssParameter name="stroke">#0000ff</CssParameter>
	<CssParameter name="stroke-width">7</CssParameter>
	<CssParameter name="stroke-linejoin">round</CssParameter>
      </LineSymbolizer>
      <!-- Red -->
      <LineSymbolizer>
	<CssParameter name="stroke">#00ff00</CssParameter>
	<CssParameter name="stroke-width">7</CssParameter>
	<CssParameter name="stroke-linejoin">round</CssParameter>
	<CssParameter name="stroke-dasharray">15,15</CssParameter>
      </LineSymbolizer>
    </Rule>

    <!-- MAX Green/Yellow Line -->
    <Rule>
      <Filter>[type] = 'MAX' and [line] = 'GY'</Filter>
      <!-- Green -->
      <LineSymbolizer>
	<CssParameter name="stroke">#00ff00</CssParameter>
	<CssParameter name="stroke-width">7</CssParameter>
	<CssParameter name="stroke-linejoin">round</CssParameter>
      </LineSymbolizer>
      <!-- Yellow -->
      <LineSymbolizer>
	<CssParameter name="stroke">#e5e200</CssParameter>
	<CssParameter name="stroke-width">7</CssParameter>
	<CssParameter name="stroke-linejoin">round</CssParameter>
	<CssParameter name="stroke-dasharray">15,15</CssParameter>
      </LineSymbolizer>
    </Rule>

    <!-- MAX Blue/Green/Red Line -->
    <Rule>
      <Filter>[type] = 'MAX' and [line] = 'BGR'</Filter>
      <!-- Blue -->
      <LineSymbolizer>
	<CssParameter name="stroke">#0000ff</CssParameter>
	<CssParameter name="stroke-width">7</CssParameter>
	<CssParameter name="stroke-linejoin">round</CssParameter>
      </LineSymbolizer>
      <!-- Red -->
      <LineSymbolizer>
	<CssParameter name="stroke">#ff0000</CssParameter>
	<CssParameter name="stroke-width">7</CssParameter>
	<CssParameter name="stroke-linejoin">round</CssParameter>
	<CssParameter name="stroke-dasharray">30,15</CssParameter>
      </LineSymbolizer>
      <!-- Green -->
      <LineSymbolizer>
	<CssParameter name="stroke">#00ff00</CssParameter>
	<CssParameter name="stroke-width">7</CssParameter>
	<CssParameter name="stroke-linejoin">round</CssParameter>
	<!-- this will likely make the overlayed dashes make more sense:
	     Bottom layer - solid: ===============
	     Middle layer - dash : XXXXXXXXXX
	     Top layer - dash    : *****
	-->
	<CssParameter name="stroke-dasharray">15,30</CssParameter>
      </LineSymbolizer>
    </Rule>

    <!-- MAX Blue/Green/Red/Yellow Line -->
    <Rule>
      <Filter>[type] = 'MAX' and [line] = 'BGRY'</Filter>
      <!-- Blue -->
      <LineSymbolizer>
	<CssParameter name="stroke">#0000ff</CssParameter>
	<CssParameter name="stroke-width">7</CssParameter>
	<CssParameter name="stroke-linejoin">round</CssParameter>
      </LineSymbolizer>
      <!-- Red -->
      <LineSymbolizer>
	<CssParameter name="stroke">#ff0000</CssParameter>
	<CssParameter name="stroke-width">7</CssParameter>
	<CssParameter name="stroke-linejoin">round</CssParameter>
	<CssParameter name="stroke-dasharray">6,2</CssParameter>
      </LineSymbolizer>
      <!-- Green -->
      <LineSymbolizer>
	<CssParameter name="stroke">#00ff00</CssParameter>
	<CssParameter name="stroke-width">7</CssParameter>
	<CssParameter name="stroke-linejoin">round</CssParameter>
	<CssParameter name="stroke-dasharray">4,4</CssParameter>
      </LineSymbolizer>
      <!-- Yellow -->
      <LineSymbolizer>
	<CssParameter name="stroke">#e5e200</CssParameter>
	<CssParameter name="stroke-width">7</CssParameter>
	<CssParameter name="stroke-linejoin">round</CssParameter>
	<CssParameter name="stroke-dasharray">2,6</CssParameter>
      </LineSymbolizer>
    </Rule>
    
    <!-- Streetcar -->
    <Rule>
      <Filter>[type] = 'SC' and [status] = 'Existing'</Filter>
      <!-- Level 14 and above -->
      <MaxScaleDenominator>50000</MaxScaleDenominator>
      <LineSymbolizer>
      	<!-- Orange? Don't want to confuse with Milwaukie MAX -->
	<CssParameter name="stroke">#ff3300</CssParameter>
	<!-- 4 vs 7 for all the rest -->
	<CssParameter name="stroke-width">4</CssParameter>
	<CssParameter name="stroke-linejoin">round</CssParameter>
      </LineSymbolizer>
    </Rule>
  </Style>

  <Style name="RailStops">
    <Rule>
      <!-- MAX -->
      <Filter>[type] = 'MAX' and [status] = 'Existing'</Filter>
      <!-- zoom 13 -->
      <MaxScaleDenominator>100000</MaxScaleDenominator>
      <PointSymbolizer width="15" height="15" file="img/stop15.png" 
		       type="png"/>
    </Rule>

    <!-- Streetcar -->
    <Rule>
      <Filter>[type] = 'SC' and [status] = 'Existing'</Filter>
      <!-- zoom 15 -->
      <MaxScaleDenominator>25000</MaxScaleDenominator>
      <PointSymbolizer file="img/stop9.png" width="9" height="9" 
		       type="png"/>
    </Rule>
  </Style>

  <Layer name="Rail Lines" srs="+init=epsg:2269">
    <StyleName>RailLines</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">tm_rail_lines</Parameter>
    </Datasource>
  </Layer>

  <Layer name="Rail Stops" srs="+init=epsg:2269">
    <StyleName>RailStops</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">tm_rail_stops</Parameter>
    </Datasource>
  </Layer>
</Map>